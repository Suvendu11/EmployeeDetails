{
    "name": "empdetais",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^3.12.1",
        "@sap-cloud-sdk/resilience": "^3.12.1",
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3",
        "express": "^4.19.2",
        "nodemailer": "^6.9.14"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.120.6",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-employeeapp": "cds watch --open employeeapp/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy empdetais --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "suvendurout807@gmail.com": {
                            "roles": [
                                "Viewer",
                                "Admin"
                            ]
                        }
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana"
                },
                "[development]": {
                    "kind": "sqlite"
                },
                "model": [
                    "db",
                    "srv"
                ]
            }
        }
    }
}
